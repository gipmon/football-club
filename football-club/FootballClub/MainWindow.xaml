<Controls:MetroWindow x:Class="FootballClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        
        Title="Football Club Manager" 
                      
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"

        WindowStartupLocation="CenterScreen"
                      
        Height="550" 
        Width="902">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="staff/departments" Name="staff" Click="Button_Staff" />
            <Button Content="teams" Name="players" Click="Button_Player"/>
            <Button Content="practices" Name="practices" Click="Button_Practices"/>
            <Button Content="club members" Name="club_members" Click="Button_ClubMember" />
            <Button Content="stadium" Name="stadium" Click="Button_Stadium" />
            <Button Content="settings" Name="settings" Click="Button_Settings"/>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Frame x:Name="Frame1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Controls:MetroWindow>