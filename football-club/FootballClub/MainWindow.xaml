<Controls:MetroWindow x:Class="FootballClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        
        Title="Football Club Manager" 
                      
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"

        WindowStartupLocation="CenterScreen"
                      
        Height="450" 
        Width="725">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="staff" Name="staff" />
            <Button Content="players" Name="players" />
            <Button Content="club members" Name="club_members" Click="Button_ClubMember" />
            <Button Content="practices" Name="practices" />
            <Button Content="settings" Name="settings" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Frame x:Name="Frame1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Controls:MetroWindow>