<Controls:MetroWindow x:Class="FootballClub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        
        Title="Football Club Manager" 
                      
        BorderBrush="{DynamicResource AccentColorBrush}"
        BorderThickness="1"

        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowTransitionsEnabled="True"
       
        Height="640" 
        Width="960">
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button Content="home" Name="home" Click="Button_Home"/>
            <Button Content="staff/departments" Name="staff" Click="Button_Staff" />
            <Button Content="teams/players" Name="players" Click="Button_Player"/>
            <Button Content="practices/courts" Name="practices" Click="Button_Practices"/>
            <Button Content="club members/annual seats" Name="club_members" Click="Button_ClubMember" />
            <Button Content="stadium sections/seats" Name="stadium" Click="Button_Stadium" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Frame x:Name="Frame1" NavigationUIVisibility="Hidden"></Frame>
    </Grid>
</Controls:MetroWindow>